{
	"name": "Zensical Dev-Container",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "toolsToInstall": "pipenv,virtualenv"
        }
    },
    "mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],
    "customizations": {
        "vscode": {
            "extensions": [
				"yzhang.markdown-all-in-one",
				"davidanson.vscode-markdownlint",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "workbench.colorTheme": "Default Dark+",
                "workbench.iconTheme": "vscode-icons",
                "python.defaultInterpreterPath": "./ve-docs-dev/bin/python"
            }
        }
    },
	"postCreateCommand": "make all && sudo cp .devcontainer/welcome.txt /usr/local/etc/vscode-dev-containers/first-run-notice.txt"
}
